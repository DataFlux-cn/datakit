{
    "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
    "version": "0.2",
    "caseSensitive": true,
    "dictionaryDefinitions": [
        {
            "name": "glossary",
            "path": "cspell/glossary.txt",
            "addWords": true
        }
    ],
    "dictionaries": [
        "glossary"
    ],

    "languageSettings": [
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                "/^\\s*```[\\s\\S]*?^\\s*```/gm",
                "/`.*`/gm",
                "/'.*'/gm", // ignore markdown header meta infos
                "/:.*:/gm",
                "/_.*_/gm",
                "/\\*.*\\*/gm",
                "/ {#[-a-z0-9.]*}/gm",
                "/{{[^{}]*}}/gm",
                "^icon: .*"
            ]
        }
    ]
}
